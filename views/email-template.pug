doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Portfolio Contact Form
    style.
     body {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #ffffff;
    background-color: #0a0a0a;
  }
  
  .email-container {
    max-width: 600px;
    margin: 0 auto;
    background-color: #0a0a0a;
    background-image: radial-gradient(circle, rgba(45, 45, 80, 0.3) 1px, transparent 1px);
    background-size: 30px 30px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.5);
  }
  
  /* Header styles */
  .header {
    padding: 32px 24px;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(white, rgba(255, 255, 255, 0.2) 2px, transparent 2px);
    background-size: 50px 50px;
    opacity: 0.1;
    z-index: 0;
  }
  
  .logo {
    display: flex;
    align-items: center;
    margin-bottom: 16px;
    position: relative;
    z-index: 1;
  }
  
  .logo-icon {
    width: 40px;
    height: 40px;
    background-color: #5865F2;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    font-size: 20px;
    font-weight: bold;
  }
  
  .header h2 {
    margin: 0;
    font-size: 28px;
    font-weight: 700;
    background: linear-gradient(90deg, #ffffff, #a5b4fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    z-index: 1;
  }
  
  /* Content styles */
  .content {
    background: rgba(26, 26, 46, 0.8);
    padding: 32px 24px;
    border-radius: 0 0 12px 12px;
    position: relative;
  }
  
  .message-header {
    display: flex;
    align-items: center;
    margin-bottom: 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 16px;
  }
  
  .sender-info {
    flex: 1;
  }
  
  .sender-name {
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 4px;
  }
  
  .sender-email {
    font-size: 14px;
    color: #a5b4fc;
  }
  
  .subject {
    font-size: 20px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .message-body {
    font-size: 16px;
    line-height: 1.6;
    color: #e2e8f0;
    white-space: pre-wrap;
  }
  
  /* Footer styles */
  .footer {
    text-align: center;
    color: #94a3b8;
    font-size: 12px;
    margin-top: 32px;
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    z-index: 1;
  }
  
  .tech-icons {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin-bottom: 16px;
  }
  
  .tech-icon {
    width: 24px;
    height: 24px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
  }
  
  /* Responsive styles */
  @media only screen and (max-width: 480px) {
    .header {
      padding: 24px 16px;
    }
    
    .content {
      padding: 24px 16px;
    }
    
    .header h2 {
      font-size: 24px;
    }
  }

  body
    .email-container
      .header
        .logo
          .logo-icon Z
          span(style="color: #ffffff; font-weight: 600;") Portfolio
        h2 New Message Received
      
      .content
        .message-header
          .sender-info
            .sender-name #{name}
            .sender-email #{email}
        
        .subject #{subject}
        
        .message-body #{message}
        
        .footer
          .tech-icons
            .tech-icon JS
            .tech-icon TS
            .tech-icon R
          p Creating digital experiences that matter
          p Sent from your portfolio contact form